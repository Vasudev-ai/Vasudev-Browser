{
  "name": "vasudev-browser",
  "version": "0.1.0",
  "private": true,
  "description": "Vasudev Browser - A custom Chromium-based browser using Electron + React (Vite)",
  "main": "electron/main.js",
  "type": "commonjs",
  "scripts": {
    "dev": "concurrently -k -n VITE,ELECTRON -c blue,green \"vite\" \"wait-on http://localhost:5173 && cross-env ELECTRON_START_URL=http://localhost:5173 electron .\"",
    "vite": "vite",
    "electron": "electron .",
    "start": "npm run build:renderer && electron .",
    "build:renderer": "vite build",
    "pack": "npm run build:renderer && electron-builder --dir",
    "make": "npm run build:renderer && electron-builder",
    "make:win": "npm run build:renderer && electron-builder -w",
    "make:linux": "npm run build:renderer && electron-builder -l",
    "preview": "vite preview"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^31.3.1",
    "electron-builder": "^24.13.3",
    "wait-on": "^8.0.0",
    "vite": "^5.4.2"
  },
  "build": {
    "appId": "ai.vasudev.browser",
    "productName": "Vasudev Browser",
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "asar": true,
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Network",
      "maintainer": "Vasudev",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "win": {
      "target": ["nsis"],
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    }
  }
}
